{% extends 'base.html.twig' %}

{% block title %} Tous les PFEs Dans la Bsase de Donn√©es : {% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding: 30px 50px;
            font-family: Montserrat, serif;
            font-weight: normal;
            margin: auto;
        }

        image {
            max-width: 100%;
            height: auto;
        }

        .alert {
            transition: 0.7s ease-in;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
            {#            {{ app.session.flash(label) }} #}
        {% endfor %}
    {% endfor %}

    <div>
        <div class="card-title">
            <h1> Nombres de PFEs par Entreprise : </h1>
        </div>

        <section class="card-body row row-cols-md-4 row-cols-3 g-0">
            {% for pfe in pfes %}
                <div class="card m-2 {{ cycle(['bg-secondary', 'bg-success'], loop.index0) }}">
                    <div class="card-header">
                        <h5 class="card-title">
                            <a class="link-dark text-decoration-none" href="{{ path('show_pfe', {'id': pfe.id }) }}">
                                {{ pfe.titre|title }}
                            </a>
                        </h5>
                    </div>
                    <ul class="list-group list-group-flush ca">
                        <li class="list-group-item card-text">
                            Etudiant : <strong> {{ pfe.etudiant }} </strong>
                        </li>
                        <li class="list-group-item card-text">
                            Entreprise : {{ pfe.designation }}
                        </li>
                    </ul>
                </div>
            {% endfor %}
        </section>
    </div>

{% endblock %}